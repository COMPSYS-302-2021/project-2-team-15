<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CheapEatsUoA" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#0b0d61</item>
        <item name="colorPrimaryVariant">#0b0d61</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

    </style>

    <style name="ToolbarTheme" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/material_blue_grey_900</item>
        <item name="colorPrimaryDark">#0b0d61</item>
        <item name="android:background">#0b0d61</item>
    </style>

    <style name="Theme.CheapEatsUoA.CityActivity." parent="Theme.CheapEatsUoA">
        <item name="colorPrimary">@android:color/darker_gray</item>
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/darker_gray</item>
    </style>

    <style name="Theme.CheapEatsUoA.GraftonActivity." parent="Theme.CheapEatsUoA">
        <item name="colorPrimary">#1293ac</item>
        <item name="android:statusBarColor" tools:targetApi="l">#1293ac</item>
    </style>

    <style name="Theme.CheapEatsUoA.OffCampusActivity." parent="Theme.CheapEatsUoA">
        <item name="colorPrimary">#9da71c</item>
        <item name="android:statusBarColor" tools:targetApi="l">#9da71c</item>
    </style>

    <style name="CategoryCardStyle">
        <item name="android:layout_marginBottom">4dp</item>
        <item name="cardElevation">8dp</item>
    </style>

    <style name="CategoryTextViews">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:textColor">#F0F0F0</item>
    </style>

    <style name="HeaderTextViews">
        <item name="android:textSize">30sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:textColor">#F0F0F0</item>
    </style>



</resources>